<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.herohub.model.Category" />

        <variable
            name="listener"
            type="com.example.herohub.ui.base.BaseCategoryInteractionListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:onClick="@{() -> listener.onClickCharacter(item.itemId)}"
        android:layout_marginHorizontal="@dimen/spacing_tiny"
        android:layout_marginVertical="@dimen/spacing_small"
        app:cardCornerRadius="@dimen/radius_medium"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_category_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:imageUrl="@{item.categoryImage}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_category_item_title"
                tools:srcCompat="@drawable/spiderman" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_category_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/josefinsans_regular"
                android:background="@color/md_theme_light_secondary"
                android:maxLines="1"
                android:padding="@dimen/spacing_small"
                android:text="@{item.categoryTitle}"
                android:textColor="@color/md_theme_light_surface"
                android:textSize="@dimen/text_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Spider man chapter 2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
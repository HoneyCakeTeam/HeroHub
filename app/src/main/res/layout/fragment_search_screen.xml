<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.herohub.ui.search.SearchViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.SearchScreenFragment"
        android:windowSoftInputMode="adjustPan"
        android:fitsSystemWindows="true">

        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:imeOptions="flagNoFullscreen"
            android:background="@drawable/search_rounded"
            android:iconifiedByDefault="false"
            android:queryBackground="@null"
            android:queryHint="@string/search"
            android:searchIcon="@drawable/ic_search"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="125dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/search_bar"/>

        <TextView
            android:id="@+id/tv_empty_search"
            style="@style/TextStyleCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="0.7"
            android:textColor="@color/md_theme_light_primary"
            android:text="Discover Characters and comics....."
            app:layout_constraintEnd_toEndOf="@id/img_search"
            app:layout_constraintStart_toStartOf="@id/img_search"
            app:layout_constraintTop_toBottomOf="@+id/img_search" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.7"
            android:text="@string/click_on_search_icon_to_start_searching"
            app:layout_constraintEnd_toEndOf="@id/img_search"
            app:layout_constraintStart_toStartOf="@id/img_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_empty_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_result"
            android:adapter="@{viewModel.adapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:visibility="gone"
            android:clipToPadding="false"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            tools:listitem="@layout/item_search"
            app:spanCount="2"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
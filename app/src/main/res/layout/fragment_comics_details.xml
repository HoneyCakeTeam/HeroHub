<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.herohub.ui.comicdetails.ComicDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.comicdetails.ComicDetailsFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/md_theme_dark_onBackground"
            android:text="@{viewModel.comics.toData().results.toString()}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
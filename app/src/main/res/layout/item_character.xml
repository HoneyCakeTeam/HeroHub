<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.herohub.model.Character" />

        <variable
            name="listener"
            type="com.example.herohub.ui.character.CharactersInteractionListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{() -> listener.onClickCharacter(item.id)}"
        android:layout_marginVertical="@dimen/spacing_tiny"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            tools:src="@drawable/spiderman"
            app:strokeWidth="1dp"
            android:padding="@dimen/spacing_tiny"
            app:strokeColor="@color/md_theme_dark_secondaryContainer"
            app:imageUrl="@{item.thumbnail.path}"
            android:layout_gravity="center"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Spider man 2 and hancook"
            android:text="@{item.name}"
            android:layout_gravity="center"
            android:fontFamily="@font/josefinsans_regular"
            android:textSize="@dimen/text_small"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/spacing_small"
            />

    </LinearLayout>
</layout>
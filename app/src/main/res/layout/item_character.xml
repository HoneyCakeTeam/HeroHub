<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.herohub.model.Character" />

        <variable
            name="listener"
            type="com.example.herohub.ui.character.CharactersInteractionListener" />
    </data>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            tools:src="@drawable/spiderman"
            app:strokeWidth="1dp"
            android:padding="@dimen/spacing_tiny"
            app:strokeColor="@color/md_theme_dark_secondaryContainer"
            android:onClick="@{() -> listener.onClickItem(item.id)}"
            app:imageUrl="@{item.thumbnail.path}"
            />

    </LinearLayout>
</layout>
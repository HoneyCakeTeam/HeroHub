<resources>

    <style name="AppTheme" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_onPrimary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_primary</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onPrimary</item>
        <item name="colorTertiary">@color/md_theme_light_onPrimary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onPrimary</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onPrimary</item>
        <item name="colorSurface">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorOnSurface">@color/md_theme_light_onPrimary</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onPrimary</item>
        <item name="colorOutline">@color/md_theme_light_onPrimary</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>

        <item name="android:statusBarColor">@color/md_theme_dark_background</item>
    </style>

    <style name="TextStyleCategories">
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:fontFamily">@font/josefinsans_semibold</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CardRadius">
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>

</resources>
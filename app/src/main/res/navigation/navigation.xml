        tools:layout="@layout/fragment_series_details" />
    <fragment
        android:id="@+id/events_details_fragment"
        android:name="com.example.herohub.ui.eventdetails.EventDetailsFragment"
        android:label="Events Details"
        tools:layout="@layout/fragment_events_details" />
    <fragment
        android:id="@+id/stories_details_fragment"
        android:name="com.example.herohub.ui.storydetails.StoriesDetailsFragment"
        android:label="Stories Details"
        tools:layout="@layout/fragment_stories_details" />
    <fragment
        android:id="@+id/favourite_fragment"
        android:name="com.example.herohub.ui.favorite.FavouriteScreenFragment"
        android:label="Favourite Screen"
        tools:layout="@layout/fragment_favourite_screen" />
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.example.herohub.ui.search.SearchScreenFragment"
        android:label="Search Screen"
        tools:layout="@layout/fragment_search_screen" />
    <fragment
        android:id="@+id/categories_fragment"
        android:name="com.example.herohub.ui.category.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories" />
</navigation>